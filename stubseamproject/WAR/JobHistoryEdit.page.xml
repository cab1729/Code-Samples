<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/JobHistoryList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{jobHistoryHome.wire}"/>

   <param name="jobHistoryFrom"/>
   <param name="jobHistoryEmployeeId" value="#{jobHistoryHome.jobHistoryId.employeeId}"/>
   <param name="jobHistoryStartDate" value="#{jobHistoryHome.jobHistoryId.startDate}"/>
   <param name="employeesFrom"/>
   <param name="employeesEmployeeId" value="#{employeesHome.employeesEmployeeId}"/>
   <param name="jobsFrom"/>
   <param name="jobsJobId" value="#{jobsHome.jobsJobId}"/>

   <param name="departmentsFrom"/>
   <param name="departmentsDepartmentId" value="#{departmentsHome.departmentsDepartmentId}"/>
   <param name="locationsFrom"/>
   <param name="locationsLocationId" value="#{locationsHome.locationsLocationId}"/>
   <param name="countriesFrom"/>
   <param name="countriesCountryId" value="#{countriesHome.countriesCountryId}"/>
   <param name="regionsFrom"/>
   <param name="regionsRegionId" value="#{regionsHome.regionsRegionId}"/>







   <navigation from-action="#{jobHistoryHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/JobHistory.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{jobHistoryHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/JobHistory.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{jobHistoryHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/JobHistoryList.xhtml"/>
      </rule>
   </navigation>

</page>
